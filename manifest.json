{
    "manifest_version": 2,

    "background": {
      "scripts":["background.js"]
    },
    "name": "Facebook RTL Comment",
    "description": "Facebook RTL Comment",
    "version": "1.0",

    "permissions": [
      "tabs",
      "activeTab",
 "*://www.facebook.com/",
 "*://www.facebook.com/*"
  ],
   "content_scripts": [
      {
       "matches": [
        "*://www.facebook.com/",
  	    "*://www.facebook.com/*"


       ],
       "js": ["content.js"]
      }
    ]
  }
