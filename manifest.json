{
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "name": "Facebook RTL Comment",
  "description": "Facebook RTL Comment",
  "version": "1.1",
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "*://www.facebook.com/",
    "*://www.facebook.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.facebook.com/",
        "*://www.facebook.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}